@import 'nib'
@import '_colors'

ul.streams 
  li
    float: left
    margin: 0 20px 30px 0
    width: 270px
    
.stream-content

  .screenshot
    position: relative
    padding: 10px
    background-color: $white
    border-radius: 3px
    box-shadow: 0 1px 2px rgba(0,0,0, 0.07)

    .img
      max-width: 100%

    .stream-over
      opacity: 0
      position: absolute
      top: 10px
      left: 10px
      width: 250px
      height: 190px
      background: rgba(255, 255, 255, 0.95);
      
      .status
        font-weight: bold
        color: $lightblack
        line-height: 1.2em
      
      .timeago
        position: absolute
        bottom: 10px
        font-weight: bold
        font-size: 11px
        
    .meta
      margin: 10px 0 5px 0
      color: $gray
      font-size: 12px
      line-height: 14px
      
      .game
        float: left
        width: 50%
      
      .viewers
        float: left
        width: 50%
        text-align: right
      
  h2.stream-title
    max-height: 16px
    margin: 10px 0 0 0
    padding: 0 0 0 10px
    font-size: 12px
    font-weight: normal
    line-height: 1.4em
    color: $gray
    vertical-align: middle
    
    .photo
      width: 24px