<div class="stream-content">
  <header class="stream-header">

  </header>
  <div class="screenshot">
    <div class="stream-link">
      <img src="{{preview}}"/>
    </div>
    <div class="stream-over">
      <div class="status">
        <strong>{{channel.status}}</strong>
      </div>
      <em class="timeago">{{channel.updated_at}}</em>
    </div>
    <div class="meta">
      <span class="game">{{game}}</span>
      <span class="viewers">{{viewers}}</span>
    </div>
  </div>
  <h2 class="stream-title"><a href="#">{{channel.display_name}}</a></h2>
</div>